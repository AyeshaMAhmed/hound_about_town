<h1> Add Your Pet's Information </h1>

<%= form_tag '/pets', method: :post do  %>

<div>
  Pet Name: <input type="text" name="name">
</div>
<div>
  Pet's Gender: <input type="text" name="gender">
</div>
<div>
  Pet's Age: <input type="number" name="age">
</div>
<div>
  Pet's Image: <input type="url" name="image_url">
</div>

<br>

<input type="submit" value="Add Pet">


<% end %>