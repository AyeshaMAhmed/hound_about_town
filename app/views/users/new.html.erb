<h3> Create Your User Account </h3>

<br>

<%= form_tag '/users', multipart: true, method: :post, :class => "form-horizontal" do  %>
  
  <div class="form-group">
    <label class="control-label col-sm-2" for="username">Username:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="usename" name="username" placeholder="Enter username">
    </div>
  </div>
  
   <div class="form-group">
    <label class="control-label col-sm-2" for="email">Email:</label>
    <div class="col-sm-10">
      <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="pwd">Password:</label>
    <div class="col-sm-10"> 
      <input type="password" class="form-control" id="pwd" name="password" placeholder="Enter password">
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="pwd">Confirm Password:</label>
    <div class="col-sm-10"> 
      <input type="password" class="form-control" id="pwd" name="password_confirmation" placeholder="Confirm password">
    </div>
  </div>
   <div class="form-group">
    <label class="control-label col-sm-2" for="age">Age:</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="age" name="age" placeholder="Enter your age. Must be over 21">
    </div>
  </div>
   <div class="form-group">
    <label class="control-label col-sm-2" for="gender">Gender:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="gender" name="gender" placeholder="Enter gender">
    </div>
  </div>
   <div class="form-group">
    <label class="control-label col-sm-2" for="city">City:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="city" name="city" placeholder="Enter city">
    </div>
  </div>

   <div class="form-group">
    <label class="control-label col-sm-2" for="state">State:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="state" name="state" placeholder="Enter state">
    </div>
  </div>
   <div class="form-group">
    <label class="control-label col-sm-2" for="zipcode">Zipcode:</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="zipcode" name="zipcode" placeholder="Enter zipcode">
    </div>
  </div>
   <div class="form-group">
    <label class="control-label col-sm-2" for="email">About Me:</label>
    <div class="col-sm-10">
      <textarea name="about_me" placeholder="Tell us a bit about you" id="" cols="120" rows="10"></textarea>
    </div>
  </div>

<div>
  <%= label_tag :avatar %>
  <%= file_field_tag :avatar %>
</div>

<br>


<div class="col-4 align-self-center text-left">
  <input class="btn u-btn-outline-primary g-font-size-13 text-uppercase g-py-10 g-px-15" name="commit" type="submit" value="Create Account">
</div>
<div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label><input type="checkbox"> Remember me</label>
      </div>
    </div>
  </div>

<% end %>



  
 