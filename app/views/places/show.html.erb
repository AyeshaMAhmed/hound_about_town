<h1> Business information </h1>

<%= form_tag "/places/#{@place.id}", method: :get do %>
<div>

<h2> Name: <%= @business["name"] %></h2>

<img src="<%= @business["image_url"] %>" height="35%" width="35%">

<h3> Address: <%= @business["location"]["display_address"][0]%>, <%= @business["location"]["display_address"][1]%></h3>
<h3> Phone: <%= @business["display_phone"] %></h3>
<h3> Price: <%= @business["price"] %></h3>
<h3> Ratings: <%= @business["rating"] %></h3> 
<h3> Reviews: <%= @business["review_count"] %></h3> 
<a href="<%= @business["url"]%>"> Website </a>

<% end %> 

<hr>

<% @users.each do |user| %>

  <p><%= user.username  %></p> 
  <p><%= user.city  %></p> 
  <p><%= user.state  %></p>  
  <%= image_tag user.avatar.url(:medium) %>
  <p><a href="mailto: <%= user.email %>"><%= user.email %></a></p>


<% end %>


</div>



